<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Add Category</h2>
                <form action="/admin/addcategory" method="post">

                    <label for="">Category Name</label>
                    <input type="text" name="Category" id="Category" class="form-control" onkeyup="validateCategoryName()">
                    <h6 id="categoryname-error"></h6>

                    <button type="submit" class="btn btn-success mt-4" onclick="return validateFormC(event)">Submit</button>
                    <h6 id="form-error-addcategory"></h6>

                </form>
            </div>
        </div>
    </div>
</section>

</div>
</div>
</div>

<script>
    let categorynameError = document.getElementById('categoryname-error')
    let formError = document.getElementById('form-error-addcategory')



    function validateCategoryName() {
        let categoryName = document.getElementById('Category').value;

        if (categoryName.length == 0) {
            document.getElementById('categoryname-error').style.color = 'red';
            categorynameError.innerHTML = 'Category Name is Required';
            return false;
        }
        if (categoryName.length < 5) {
            document.getElementById('categoryname-error').style.color = 'red';
            categorynameError.innerHTML = 'Category Name  contain atleast 5 character';
            return false;
        }
        if (categoryName.length > 50) {
            document.getElementById('categoryname-error').style.color = 'red';
            categorynameError.innerHTML = 'Exceeded maximum limit 50';
            return false;
        }


        if (!categoryName.match(/[\w\s]*/)) {
            document.getElementById('categoryname-error').style.color = 'red';
            categorynameError.innerHTML = 'Can only contain letters';
            return false;
        }
        document.getElementById('categoryname-error').style.color = 'green';
        categorynameError.innerHTML = 'valid';
        return true;
    }

    function validateFormC(e) {
        
        if (!validateCategoryName()) {
            e.preventDefault();
            console.log("VAlidate category Name")

            document.getElementById('form-error-addcategory').style.color = 'red';
            formError.innerHTML = 'Please fix error to submit';
            return false;
        } else {
            console.log("VAlidateed category Name")
            formError.innerHTML = 'valid';
            return true;
        }
    }


</script>