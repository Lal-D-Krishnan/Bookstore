<section>

    <div class="col-12">
        <div class="card m-b-30">
            <div class="card-body">

                <h4 class="mt-0 header-title"> This is the Full report of Orders </h4>
                <p class="text-muted m-b-30 font-14">The Buttons extension for DataTables
                </p>
                <form action="/admin/daterange" method="post">

                    <label for="startdate">Start date:</label>
                    <input type="date" id="startdate" name="startdate">

                    <label for="enddate">End date:</label>
                    <input type="date" id="enddate" name="enddate">

                    <input type="submit">

                </form>

                <table id="" class="table table-striped table-reponsive table-bordered" cellspacing="0" width="100%">

                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Date</th>
                            <th>Name</th>
                            <th>Amount</th>
                            <th>Payment</th>
                            <th>Invoice</th>
                            <th>Status</th>
                            <th>View Products</th>
                            {{!-- <th>Age</th>
                            <th>Start date</th>
                            <th>Salary</th> --}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#each orders}}
                        <tr>
                            <td>{{inc @index}}</td>
                            <td>{{this.date}}</td>
                            {{#each this.name}}
                            <td>{{this.Name}}</td>
                            {{/each}}
                            <td>{{this.totalAmount}}</td>
                            <td>{{this.paymentMethod}}</td>
                            <td>
                                <a href="/admin/invoiceadmn/{{this._id}}">Bill</a>
                            </td>

                            <td>

                                {{#ifEquals this.status 'DELIVERED'}}
                                <div class="dropdown">
                                    <button class="btn btn-secondary  rounded-0 " style="pointer-events: none;" href="#" role="button" aria-expanded="false">
                                        {{this.status}}
                                    </button>
                                </div>
                                {{/ifEquals}}
                                {{#ifEquals this.status 'PENDING'}}
                                <div class="dropdown">
                                    <button class="btn btn-secondary  rounded-0 " style="pointer-events: none;" href="#" role="button" aria-expanded="false">
                                        {{this.status}}
                                    </button>
                                </div>
                                {{/ifEquals}}
                                {{#ifEquals this.status 'CANCEL'}}
                                <div class="dropdown">
                                    <button class="btn btn-secondary  rounded-0 " style="pointer-events: none;" href="#" role="button" aria-expanded="false">
                                        {{this.status}}
                                    </button>
                                </div>
                                {{/ifEquals}}

                                {{#ifEquals this.status 'PLACED'}}
                                <!-- Small button groups (default and split) -->
                                <div class="btn-group">
                                    <button class="btn btn-secondary btn-sm" type="button">
                                        {{this.status}}
                                    </button>
                                    <button type="button" class="btn btn-sm btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span class="sr-only">Toggle Dropdown</span>
                                    </button>
                                    <div class="dropdown-menu">
                                        {{!-- <a class="dropdown-item" href="/admin/admin-orderplaced/{{this._id}}">PLACED</a> --}}
                                        {{!-- <a class="dropdown-item" href="/admin/admin-orderpending/{{this._id}}">PENDING</a> --}}
                                        <a class="dropdown-item" href="/admin/admin-ordershipped/{{this._id}}">SHIPPED</a>
                                        {{!-- <a class="dropdown-item" href="/admin/admin-orderdelivered/{{this._id}}">DELIVERED</a> --}}
                                        {{!-- <a class="dropdown-item" href="/admin/admin-ordercancel/{{this._id}}">CANCEL</a> --}}
                                    </div>
                                </div>

                                {{/ifEquals}}

                                {{#ifEquals this.status 'SHIPPED'}}
                                <!-- Small button groups (default and split) -->
                                <div class="btn-group">
                                    <button class="btn btn-secondary btn-sm" type="button">
                                        {{this.status}}
                                    </button>
                                    <button type="button" class="btn btn-sm btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span class="sr-only">Toggle Dropdown</span>
                                    </button>
                                    <div class="dropdown-menu">
                                        {{!-- <a class="dropdown-item" href="/admin/admin-orderplaced/{{this._id}}">PLACED</a> --}}
                                        {{!-- <a class="dropdown-item" href="/admin/admin-orderpending/{{this._id}}">PENDING</a> --}}
                                        {{!-- <a class="dropdown-item" href="/admin/admin-ordershipped/{{this._id}}">SHIPPED</a> --}}
                                        <a class="dropdown-item" href="/admin/admin-orderdelivered/{{this._id}}">DELIVERED</a>
                                        {{!-- <a class="dropdown-item" href="/admin/admin-ordercancel/{{this._id}}">CANCEL</a> --}}
                                    </div>
                                </div>

                                {{/ifEquals}}
                            </td>


                            <td><a href="/admin/admin-vieworderitems/{{this._id}}" class="btn btn-info">View Product</a></td>
                            {{!-- <td>27</td>
                            <td>2011/01/25</td>
                            <td>$112,000</td> --}}
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

            </div>
        </div>
    </div> <!-- end col -->
    </div> <!-- end row -->
</section>


</div>
</div>
</div>