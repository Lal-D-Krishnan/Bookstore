<div class="cart-main-area pt-200 pb-120">
    <div class="container">
        <h3 class="cart-page-title">Your cart items</h3>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                
                    <div class="table-content table-responsive cart-table-content">
                        <table>
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Until Price</th>
                                    <th>Qty</th>
                                    {{!-- <th>Subtotal</th> --}}
                                    <th>action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr>
                                   
                                    <td class="product-thumbnail">
                                        <a href="#"><img src="/product-images/{{this.product.image.[0]}}" alt="" width="98px"
                                                height="112px"></a>
                                    </td>
                                    <td class="product-name"><a href="#">{{this.product.ProductName}}</a></td>
                                    <td class="product-price-cart"><span class="amount">₹ {{this.product.SellingPrice}}</span>
                                    </td>
                                    <td class="product-quantity pro-details-quality">
                                        {{!-- <div class="cart-plus-minus">
                                            <input class="cart-plus-minus-box" type="text" name="qtybutton" value="1">
                                        </div> --}}
                                        {{!-- <span class="" style="display: inline-block !important;">  --}} 
                                            <button class="cart-item-count me-1 btn btn-none buttonBorder" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../registeredUser._id}}',-1)">-</button>
                                           <span id="{{this.product._id}}">{{this.quantity}}</span> 
                                            <button class="cart-item-count ms-1 btn btn-none buttonBorder" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../registeredUser._id}}',1)">+</button>
                                            {{!-- </span> --}}
                                        
                                    </td>
                                    
                                    {{!-- <td class="product-subtotal">₹{{this.product.SellingPrice}}</td> --}}
                                  
                                  
                                    <td class="product-wishlist-cart">
                                         {{!-- <div class="grand-totall bg-white border-0"><a href="">View Products</a> --}}
                                    <a  onclick="onRemoveButton(event,'{{this._id}}','{{this.product._id}}')">Remove Prdtcs</a>
                                    {{!-- <a onclick="onRemoveButton('{{this._id}}','{{this.product._id}}')">Remove Prdtcs</a> --}}
                                    </td>
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>
                    </div>
                    
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="cart-shiping-update-wrapper">
                                <div class="cart-shiping-update">
                                    <a href="/">Continue Shopping</a>
                                </div>
                                {{!-- <div class="cart-clear">
                                    <button>Update Cart</button>
                                    <a href="#">Clear Cart</a>
                                </div> --}}
                            </div>
                        </div>
                    </div>
                
                <div class="row">
                    <div class="col-lg-4 col-md-6" style="visibility: hidden;">
                        <div class="cart-tax">
                            <div class="title-wrap">
                                <h4 class="cart-bottom-title section-bg-gray">Estimate Shipping And Tax</h4>
                            </div>
                            <div class="tax-wrapper">
                                <p>Enter your destination to get a shipping estimate.</p>
                                <div class="tax-select-wrapper">
                                    <div class="tax-select">
                                        <label>
                                            * Country
                                        </label>
                                        <select class="email s-email s-wid">
                                            <option>Bangladesh</option>
                                            <option>Albania</option>
                                            <option>Åland Islands</option>
                                            <option>Afghanistan</option>
                                            <option>Belgium</option>
                                        </select>
                                    </div>
                                    <div class="tax-select">
                                        <label>
                                            * Region / State
                                        </label>
                                        <select class="email s-email s-wid">
                                            <option>Bangladesh</option>
                                            <option>Albania</option>
                                            <option>Åland Islands</option>
                                            <option>Afghanistan</option>
                                            <option>Belgium</option>
                                        </select>
                                    </div>
                                    <div class="tax-select">
                                        <label>
                                            * Zip/Postal Code
                                        </label>
                                        <input type="text">
                                    </div>
                                    <button class="cart-btn-2" type="submit">Get A Quote</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6" style="visibility: hidden;">
                        <div class="discount-code-wrapper">
                            <div class="title-wrap">
                                <h4 class="cart-bottom-title section-bg-gray">Use Coupon Code</h4>
                            </div>
                            <div class="discount-code">
                                <p>Enter your coupon code if you have one.</p>
                                <form action="#" =>
                                    <input type="text" required="">
                                    <button class="cart-btn-2" type="submit" >Apply Coupon</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12">
                        <div class="grand-totall">
                            <div class="title-wrap">
                                <h4 class="cart-bottom-title section-bg-gary-cart mb-2">Cart Total</h4>
                            </div>
                            {{!-- <h5>Total products <span>₹ {{totalVal}}</span></h5> --}}
                            {{!-- <div class="total-shipping">
                                <h5>Total shipping</h5>
                                <ul>
                                    <li><input type="checkbox"> Standard <span>₹20.00</span></li>
                                    <li><input type="checkbox"> Express <span>₹30.00</span></li>
                                </ul>
                            </div> --}}
                            <h4 class="grand-totall-title pt-50 pb-40">Grand Total ₹ <span id="total">{{totalVal}}</span></h4>
                            {{!-- <a href="#">Proceed to Checkout</a> --}}
                            <a href="/place-order">Place Order</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

