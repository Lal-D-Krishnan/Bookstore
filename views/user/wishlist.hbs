<style>
    .cart-table-content table tbody > tr td.product-wishlist-cart > a {
    background-color: #3143b7;
}
</style>

<div class="cart-main-area pt-200 pb-120">
    <div class="container">
        <h3 class="cart-page-title">Your Wishlist</h3>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                
                    <div class="table-content table-responsive cart-table-content">
                        <table>
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Until Price</th>
                                    {{!-- <th>Add to Cart</th> --}}
                                    {{!-- <th>Subtotal</th> --}}
                                    <th>Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr>
                                   
                                    <td class="product-thumbnail">
                                        <a href="#"><img src="/product-images/{{this.product.image.[0]}}" alt="" width="98px"
                                                height="112px"></a>
                                    </td>
                                    <td class="product-name"><a href="#">{{this.product.ProductName}}</a></td>
                                    <td class="product-price-cart"><span class="amount">â‚¹ {{this.product.SellingPrice}}</span></td>
                                    {{!-- <td class="product-wishlist-cart">
                                        <a onclick="addToCart('{{this.product._id}}')" title="Add to Cart" >Add to Cart</a>
                                    </td>                                   --}}
                                  
                                    <td class="product-wishlist-cart">
                                         {{!-- <div class="grand-totall bg-white border-0"><a href="">View Products</a> --}}
                                    {{!-- <a href="/view-order-products/{{this._id}}" onclick="onRemoveButton('{{this._id}}','{{this.product._id}}')">Remove Prdtcs</a> --}}
                                        <a onclick="removeFromWishlist('{{this.product._id}}')" >Remove Prdtcs</a>
                                    </td>
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>
                    </div>
                    
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="cart-shiping-update-wrapper">
                                <div class="cart-shiping-update">
                                    <a href="/">Continue Shopping</a>
                                </div>
                                {{!-- <div class="cart-clear">
                                    <button>Update Cart</button>
                                    <a href="#">Clear Cart</a>
                                </div> --}}
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>

